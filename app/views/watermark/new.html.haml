- page_title t('new.title')

.container
  = form_for @watermark, method: :post, url: watermark_index_path, html: { multipart: true } do |f|
    .form-group
      %h3= t('original_image')
      = f.file_field :original_image
    .form-group
      %h3= t('watermark_ua')
      = f.file_field :watermark
    .checkbox
      = f.label :color do
        = f.check_box :color
        = t('.color')

    = f.submit t('.do_it'), class: 'btn btn-default'
